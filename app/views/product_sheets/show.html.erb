<link rel="stylesheet" href = "/css/sheet_style.css">
<div class = "content_bg">
  <div class = "content_title">
    <title>Product Sheet</title>
    <h1>Product Sheet</h1>
  </div>
  <span><%= link_to 'Edit New Product' , new_product_sheets_path%></span>
  <div class = "content">
    <table>
      <tr class = "title">
        <td>Prdouct Number</td>
        <td>Product Name</td>
        <td>Product Price</td>
        <td>Prdocut Remark</td>
      </tr>
      <% @product.each do  |sheet|%>
        <tr class = 'contnet'>
          <td><%= sheet.product_number %></td>
          <td><%= sheet.product_name %></td>
          <td><%= sheet.product_price%></td>
          <td><%= sheet.product_remark%></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
